#!/bin/sh

# executed without input filenames/redirection - show help
if [ \( -t 0 -a -z "$1" \) -o \( "$1" = "-h" \) -o \( "$1" = "--help" \) ] ; then
	BASE=$(basename $0)
	echo "
list-columns - list the field/column names in a given file, based on the first line.
Version: @VERSION@

Copyright (C) 2012, A. Gordon ( gordon at cshl dot edu )
License: @LICENSE@

Usage examples:
 $BASE [INPUT-FILE]
 $BASE < [INPUT-FILE]
 cat [INPUT-FILE] | $BASE

"
	exit
fi

awk -v FS="\t" '
{
	for (i=1;i<=NF;i++) {
		print i, $i
	}
	exit
}' "$@"
