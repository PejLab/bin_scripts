##
## A wrapper script for "dict" -
##  if output is a TTY( i.e no redicrection to a file), pipe the output to "less"
##

DICT=/usr/bin/dict

if tty -s <&1 ; then
	$DICT "$@" | less
else
	$DICT "$@"
fi
